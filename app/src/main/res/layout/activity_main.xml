<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculatorAki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Calculator Aki :3 "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Первое число"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Второе число"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Num1" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:hint="Результат"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Num2" />

    <Button
        android:id="@+id/sun"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="onBtnClick"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/min"
        app:layout_constraintRight_toLeftOf="@+id/multi"
        app:layout_constraintTop_toBottomOf="@+id/Result" />

    <Button
        android:id="@+id/min"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="onBtnClick"
        android:text="-"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sun"
        app:layout_constraintTop_toBottomOf="@+id/Result" />

    <Button
        android:id="@+id/multi"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="onBtnClick"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@id/sun"
        app:layout_constraintRight_toLeftOf="@id/div"
        app:layout_constraintTop_toBottomOf="@+id/Result" />

    <Button
        android:id="@+id/div"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="onBtnClick"
        android:text="/"
        app:layout_constraintLeft_toRightOf="@id/multi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Result" />


</androidx.constraintlayout.widget.ConstraintLayout>